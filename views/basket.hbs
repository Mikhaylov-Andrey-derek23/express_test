<h1>Корзина</h1>

{{#if basket.length}}
    <div class="basket">
        <table class="table-basket">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Цена за курс</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                {{#each basket}}
                    <tr>
                        <th>{{courseID.title}}</th>
                        <th>{{count}}</th>
                        <th><span class="price small">{{courseID.price}}</span></th>
                        <th><button class="btn btn-small js-remove" data-id="{{courseID._id}}" data-csrf="{{@root.csrf}}">Удалить</button></th>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <h4 class="basket-price">Итого: <span class="price">{{totalPrice}}</span></h4>
        <form action="/orders" method="POST">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Сделать заказ</button>
        </form>
    </div>

{{else}}
    <p>Корзина пуста</p>
{{/if}}
