
<div class="row" style="margin-top: 1em">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a  class="active" href="#login">Войти</a></li>
        <li class="tab col s6"><a class="active" href="#register">Регистрация</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h1>Войти в магазин</h1>
        <form action="/aouth/login" method="POST">
          <div class="input-field">
              <input  type="email" id="email"  name="email" class="validate" required>
              <label for="email">Ваш email</label>
              <span class="helper-text" data-error="Введите ваш email" data-success="Верно"></span>
          </div>
          <div class="input-field">
              <input  type="password" id="password"  name="password" class="validate" required >
              <label for="password">Пароль</label>
              <span class="helper-text" data-error="Введите пароль" data-success="Верно"></span>
          </div>
          <input type="hidden" name="_csrf" value="{{csrf}}">
          <button class="btn btn-primary">Войти в магазтн</button>         
        </form>
    </div>
    <div id="register" class="col s6 offset-s3">
        <h1>Регистрация</h1>
        <form action="/aouth/register" method="POST">
          <div class="input-field">
              <input  type="email" id="remail"  name="email" class="validate" required>
              <label for="email">Ваш email</label>
              <span class="helper-text" data-error="Введите ваш email" data-success="Верно"></span>
          </div>
          <div class="input-field">
              <input  type="text" id="name"  name="name" class="validate" required>
              <label for="email">Ваше имя</label>
              <span class="helper-text" data-error="Введите ваш имя" data-success="Верно"></span>
          </div>
          <div class="input-field">
              <input  type="password" id="rpassword"  name="password" class="validate" required >
              <label for="rpassword">Пароль</label>
              <span class="helper-text" data-error="Введите пароль" data-success="Верно"></span>
          </div>
          <div class="input-field">
              <input  type="password" id="confirm"  name="confirm" class="validate" required >
              <label for="confirm">Пароль еще раз</label>
              <span class="helper-text" data-error="Введите пароль" data-success="Верно"></span>
          </div>
          <input type="hidden" name="_csrf" value="{{csrf}}">
          <button class="btn btn-primary">Регистрация</button>         
        </form>
    </div>
</div>
